package com.mainwindow;

public class StartTool {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		private JRadioButton withSyrup;
	    private JRadioButton withoutSyrup;
	    private JFrame mainFrame;
	    
		withSyrup = new JRadioButton("С сиропом");
        withoutSyrup = new JRadioButton("Без сиропа");
        ButtonGroup bgrp = new ButtonGroup();
        bgrp.add(withSyrup);
        bgrp.add(withoutSyrup);
        
        JButton waterButton = new JButton("Налить");
        waterButton.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent ae) {
                String msg;
                if ( withSyrup.isSelected() )
                    msg = "Налить воды с сиропом";
                else if ( withoutSyrup.isSelected() )
                    msg = "Налить воды без сиропа";
                else
                    msg = "Не получишь ты воды";
                JOptionPane.showMessageDialog(mainFrame, msg);
            }
        });
        
        mainFrame = new JFrame("Газ. Вода");
        mainFrame.setSize(150, 150);
        mainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        mainFrame.setLayout(new BoxLayout(mainFrame.getContentPane(), BoxLayout.PAGE_AXIS));
        mainFrame.add(withSyrup);
        mainFrame.add(withoutSyrup);
        mainFrame.add(waterButton);
        
        mainFrame.setVisible(true);
    }
	}

}
